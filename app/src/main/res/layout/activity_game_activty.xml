<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/background_game"
    android:background="@drawable/register_fon"
    tools:context=".GameActivty">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/time"
            android:src="@drawable/icons8_time_100px"
            app:layout_constraintBottom_toTopOf="@id/img_1"
            app:layout_constraintRight_toRightOf="@id/img_1"
            app:layout_constraintLeft_toLeftOf="@id/img_1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <TextView
            android:id="@+id/time_text"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:text="01:59"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="@id/img_3"
            app:layout_constraintLeft_toRightOf="@id/time"
            app:layout_constraintBottom_toTopOf="@id/img_3"
            android:layout_width="0dp"
            android:layout_height="50dp"/>


        <ImageView
            android:id="@+id/img_1"
            android:src="@drawable/gamefon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/time"
            app:layout_constraintRight_toLeftOf="@id/img_2"
            app:layout_constraintBottom_toTopOf="@id/img_4"
            android:layout_width="95dp"
            android:layout_height="95dp"/>

        <ImageView
            android:id="@+id/img_2"
            android:src="@drawable/gamefon"
            app:layout_constraintLeft_toRightOf="@id/img_1"
            app:layout_constraintTop_toBottomOf="@id/time_text"
            app:layout_constraintRight_toLeftOf="@id/img_3"
            app:layout_constraintBottom_toTopOf="@id/img_5"
            android:layout_width="95dp"
            android:layout_height="95dp"/>

        <ImageView
            android:id="@+id/img_3"
            android:src="@drawable/gamefon"
            app:layout_constraintLeft_toRightOf="@id/img_2"
            app:layout_constraintTop_toBottomOf="@id/time_text"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/img_6"
            android:layout_width="95dp"
            android:layout_height="95dp"/>

        <ImageView
            android:id="@+id/img_4"
            android:src="@drawable/gamefon"
            app:layout_constraintTop_toBottomOf="@id/img_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/img_5"
            app:layout_constraintBottom_toTopOf="@id/img_7"
            android:layout_width="95dp"
            android:layout_height="95dp"/>


        <ImageView
            android:id="@+id/img_5"
            android:src="@drawable/gamefon"
            app:layout_constraintLeft_toRightOf="@id/img_4"
            app:layout_constraintTop_toBottomOf="@id/img_2"
            app:layout_constraintRight_toLeftOf="@id/img_6"
            app:layout_constraintBottom_toTopOf="@id/img_8"
            android:layout_width="95dp"
            android:layout_height="95dp"/>

        <ImageView
            android:id="@+id/img_6"
            android:src="@drawable/gamefon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_3"
            app:layout_constraintLeft_toRightOf="@id/img_5"
            app:layout_constraintBottom_toTopOf="@id/img_9"
            android:layout_width="95dp"
            android:layout_height="95dp"/>

        <ImageView
            android:id="@+id/img_7"
            android:src="@drawable/gamefon"
            app:layout_constraintTop_toBottomOf="@id/img_4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/img_8"
            app:layout_constraintBottom_toTopOf="@id/img_10"
            android:layout_width="95dp"
            android:layout_height="95dp"/>

        <ImageView
            android:id="@+id/img_8"
            android:src="@drawable/gamefon"
            app:layout_constraintLeft_toRightOf="@id/img_7"
            app:layout_constraintTop_toBottomOf="@id/img_5"
            app:layout_constraintRight_toLeftOf="@id/img_9"
            app:layout_constraintBottom_toTopOf="@id/img_11"
            android:layout_width="95dp"
            android:layout_height="95dp"/>


        <ImageView
            android:id="@+id/img_9"
            android:src="@drawable/gamefon"
            app:layout_constraintLeft_toRightOf="@id/img_8"
            app:layout_constraintTop_toBottomOf="@id/img_6"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/img_12"
            android:layout_width="95dp"
            android:layout_height="95dp"/>

        <ImageView
            android:id="@+id/img_10"
            android:src="@drawable/gamefon"
            app:layout_constraintTop_toBottomOf="@id/img_7"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/img_11"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="95dp"
            android:layout_height="95dp"/>

        <ImageView
            android:id="@+id/img_11"
            android:src="@drawable/gamefon"
            app:layout_constraintRight_toLeftOf="@id/img_12"
            app:layout_constraintTop_toBottomOf="@id/img_8"
            app:layout_constraintLeft_toRightOf="@id/img_10"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="95dp"
            android:layout_height="95dp"/>


        <ImageView
            android:id="@+id/img_12"
            android:src="@drawable/gamefon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/img_11"
            app:layout_constraintTop_toBottomOf="@id/img_9"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="95dp"
            android:layout_height="95dp"/>



        <Button
            android:id="@+id/restart"
            android:textColor="@color/white"
            android:text="Restart Game"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>











    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>